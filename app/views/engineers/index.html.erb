<p style="color: green"><%= notice %></p>

<h1>Engineers</h1>

<table class="table table-striped">
    <thead class="table-dark">
      <tr>
        <th>Engineer Id</th>
        <th>First Name:</th>
        <th>Last Name:</th>
        <th>phone:</th>
        <th>email:</th>
        <th>building Id:</th>
      </tr>

        
        
    </thead>

    <tbody>
      <% @engineers.each do |engineer| %>
        <tr>
          <td><%=engineer.id %> </td>
          <td><%=engineer.first_name %> </td>
          <td><%=engineer.last_name %> </td>
          <td><%=engineer.phone %> </td>
          <td><%=engineer.email %> </td>
          <td><%=engineer.building_id %> </td>
          
          <td><%= link_to 'Show', engineer, method: :show, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
          <td><%= link_to 'EDIT', engineer, method: :edit, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td> 
          <td><%= link_to 'Delete', engineer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
          
        </tr>
      <% end %>
 
    </tbody>

<div>
  <%= link_to "New Engineer", new_engineer_path, class:"btn btn-outline-primary" %>
</div>
